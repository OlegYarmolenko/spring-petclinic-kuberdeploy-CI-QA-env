pipeline {
    agent any
    parameters {
        string(name: "PORT", defaultValue: "8081", trim: true, description: "Port parameter")
    }
    environment {
        DOCKER_IMAGE_NAME = "oyrmlnko/spring-petclinic"
        PORT = "$params.PORT"
    }
    stages {
        stage('DeployToProduction') {
            steps {
                kubernetesDeploy(
                    kubeconfigId: 'K8s',
                    configs: 'spring-petclinic-kube-qa-deploy.yml',
                    enableConfigSubstitution: true
                )
            }
        }
    }
}
